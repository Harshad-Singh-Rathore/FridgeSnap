<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodItemList"
    android:id="@+id/layout"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="X"
        android:id="@+id/closeApp"
        tools:ignore="MissingConstraints" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food items:"
        android:textColor="@color/black"
        android:fontFamily="@font/yugothib"
        android:textSize="28dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="120dp"
        android:id="@+id/foodItemHeader"/>

    <Space
        android:layout_width="wrap_content"
        android:id="@+id/spacer"
        android:layout_below="@+id/foodItemHeader"
        android:layout_height="50dp"/>

    <LinearLayout
        android:id="@+id/checkbox_layout"
        android:layout_width="200dp"
        android:layout_marginLeft="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spacer"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/spacer"
        android:layout_marginLeft="140dp"
        android:id="@+id/foodItemText"
        android:fontFamily="@font/yugothib"
        android:textSize="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/bottomround"
        android:layout_alignParentBottom="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/deleteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete items"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addmanual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add manual items"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:layout_below="@+id/deleteBtn"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/continueList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue"

            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:layout_below="@+id/addmanual"/>

    </RelativeLayout>










</RelativeLayout>